<%= form_for @restaurant do |l| %> 
	<div class="field">
		<%= l.label :name %> <br>
		<%= l.text_field :name %> <br>
	</div>
	<div class="field">
		<%= l.label :description %> <br>
		<%= l.text_area :description %> <br>
	</div>
	<div class="field">
		<%= l.label :address %> <br>
		<%= l.text_field :address %> <br>
	</div>
	<div class="field">
		<%= l.label :phone_number %> <br>
		<%= l.text_field :phone_number %><br>
	</div>
	<div class="action">
		<%= l.submit %>
	</div>

	<% end %>